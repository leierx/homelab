{
  "gitAuthor": "Renovate Bot <renovatebot@noreply.com>",
  "rebaseWhen": "behind-base-branch",
  "timezone": "Europe/Oslo",
  "dependencyDashboard": true,
  "prHourlyLimit": 0,
  "automerge": true,
  "automergeStrategy": "merge-commit",
  "ignoreTests": true,
  "extends": [ "config:recommended" ],
  "enabledManagers": [
    "nix"
  ],
  "nix": { "enabled": true },
  "ignorePaths": ["installer/**"],
  "packageRules": [
    {
      "matchManagers": ["nix"],
      "matchDatasources": ["git-refs"],
      "versioning": "git-refs"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"]
  }
}
