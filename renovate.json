{
  "gitAuthor": "Renovate Bot <renovatebot@noreply.com>",
  "rebaseWhen": "behind-base-branch",
  "timezone": "Europe/Oslo",
  "dependencyDashboard": true,
  "prHourlyLimit": 0,
  "extends": [ "config:recommended" ],
  "enabledManagers": [
    "nix"
  ],
  "nix": { "enabled": true },
  "packageRules": [
    {
      "matchManagers": [ "nix" ],
      "enabled": false
    },
    {
      "matchManagers": [ "nix" ],
      "matchDepNames": [
        "nixpkgs",
        "nixpkgs-unstable",
        "home-manager"
      ],
      "groupName": "nixpkgs & home-manager",
      "enabled": true
    }
  ]
}
