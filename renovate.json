{
  "gitAuthor": "Renovate Bot <renovatebot@noreply.com>",
  "onboarding": false,
  "requireConfig": "required",
  "rebaseWhen": "behind-base-branch",
  "timezone": "Europe/Oslo",
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "dependencyDashboard": true,
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "nix"
  ],
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "nix"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "nix"
      ],
      "matchFileNames": [
        "^flake\\.nix$"
      ],
      "matchDepNames": [
        "nixpkgs",
        "nixpkgs-unstable",
        "home-manager"
      ],
      "groupName": "nixpkgs",
      "enabled": true
    }
  ]
}
