{
  "gitAuthor": "Renovate Bot <renovatebot@noreply.com>",
  "rebaseWhen": "behind-base-branch",
  "timezone": "Europe/Oslo",
  "dependencyDashboard": true,
  "prHourlyLimit": 0,
  "extends": [ "config:recommended" ],
  "enabledManagers": [
    "nix"
  ],
  "nix": { "enabled": true },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"],
    "automerge": true,
    "automergeStrategy": "merge-commit",
    "ignoreTests": true
  },
  "packageRules": [
    { "matchManagers": ["nix"], "enabled": false },
    {
      "matchManagers": ["nix"],
      "matchFileNames": [ "/^flake\\.nix$/" ],
      "matchDepNames": ["nixpkgs", "nixpkgs-unstable", "home-manager"],
      "groupName": "nixpkgs & home-manager",
      "enabled": true
    }
  ]
}
