{
  "extends": ["config:base"],
  "enabledManagers": [ "nix" ],
  "gitAuthor": "Renovate Bot <renovatebot@noreply.com>",
  "onboarding": false,
  "requireConfig": "required",
  "rebaseWhen": "behind-base-branch",
  "timezone": "Europe/Oslo",
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "dependencyDashboard": true,
  "nix": { "enabled": true },
  "packageRules": [
    {
      "matchManagers": ["nix"],
      "matchFileNames": ["^flake\\.nix$"],
      "enabled": false
    },
    {
      "matchManagers": ["nix"],
      "matchFileNames": ["^flake\\.nix$"],
      "matchDepNames": ["nixpkgs", "nixpkgs-unstable"],
      "groupName": "nixpkgs",
      "enabled": true
    }
  ]
}
