{
  "gitAuthor": "Renovate Bot <renovatebot@noreply.com>",
  "rebaseWhen": "behind-base-branch",
  "timezone": "Europe/Oslo",
  "dependencyDashboard": true,
  "automerge": true,
  "automergeStrategy": "merge-commit",
  "ignoreTests": true,
  "rangeStrategy": "bump",
  "extends": ["config:recommended"],
  "enabledManagers": [
    "nix"
  ],
  "nix": { "enabled": true },
  "packageRules": [
    { "matchManagers": ["nix"], "enabled": false },
    {
      "matchManagers": ["nix"],
      "matchFileNames": ["/^flake\\.nix$/", "/^flake\\.lock$/"],
      "matchDepNames": ["nixpkgs", "nixpkgs-unstable", "home-manager"],
      "groupName": "nixpkgs & home-manager",
      "enabled": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"]
  }
}
